# EditorConfig helps maintain consistent coding styles between editors and IDEs
# Place this at the root of your repo

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Match Markdown / docs (preserve trailing spaces for tables)
[*.md]
trim_trailing_whitespace = false

# Match YAML / JSON / ENV
[*.{yml,yaml,json,env}]
indent_size = 2

# Match TypeScript / React files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = double

# Match HTML / CSS / Tailwind
[*.{html,css,scss}]
indent_size = 2

# Ignore lockfiles (no newline enforcement)
[package-lock.json]
insert_final_newline = false
