{
  "compilerOptions": {
    /* === Core Path + Module Settings === */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    /* === React + JSX === */
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "es2017",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    /* === Output / Cleanliness === */
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    /* === Type Roots (for node + supabase) === */
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
